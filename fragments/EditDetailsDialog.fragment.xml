<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Panel id="panel" height="100%" expandable="true" expanded="true">
        <headerToolbar>
            <OverflowToolbar style="Clear">
                <Title text="Edit Details"/>
                <ToolbarSpacer />
                <Button icon="sap-icon://save" tooltip="Update Details" type="Transparent" press="onUpdate"/>
                <Button icon="sap-icon://decline" tooltip="Close" type="Transparent" press="onClose"/>
            </OverflowToolbar>
        </headerToolbar>
        <content>
            <VBox >
                <VBox>
                    <Label text="{i18n>name}" />
                    <Input value="{name}" />
                </VBox>
                <VBox>
                    <Label text="{i18n>designation}" />
                    <Select selectedKey="{designation}" items="{
							path: '/Designations',
                            sorter: {path:'value'} 
						}">
                        <core:Item key="{value}" text="{value}" />
                    </Select>
                </VBox>
                <VBox>
                    <Label text="{i18n>number}" />
                    <Input value="{phone}" />
                </VBox>
                <VBox>
                    <Label text="{i18n>email}" />
                    <Input value="{email}" />
                </VBox>
                <VBox>
                    <Label text="{i18n>salary}" />
                    <Input value="{salary}" />
                </VBox>
                <VBox>
                    <Label text="{i18n>gender}" />
                    <RadioButtonGroup columns="2" select=".onGenderChange">
                        <RadioButton text="Male" selected="{=${gender} === 'Male'}" />
                        <RadioButton text="Female" selected="{=${gender} === 'Female'}" />
                    </RadioButtonGroup>
                </VBox>
                <VBox>
                    <Label text="{i18n>joiningDate}" />
                    <DatePicker placeholder="Enter Date" value="{joiningDate}" valueFormat="yyyy-MM-dd" displayFormat="yyyy-MM-dd" change="handleChange" />
                </VBox>
                <VBox>
                    <Label text="{i18n>address}"/>
                    <Input value="{address}" />
                </VBox>

            </VBox>
        </content>
    </Panel>

</core:FragmentDefinition>