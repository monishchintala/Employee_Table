<mvc:View controllerName="Emp_Table.controller.Table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Table id="idEmpTable" sticky="ColumnHeaders" growingThreshold="10" growing="true" fixedLayout="false" items="{path: '/EmployeeData'}">
		<headerToolbar>
			<OverflowToolbar>
				<Title text="Employee Table" level="H2"/>
				<ToolbarSpacer/>
				<Button tooltip="Sort" icon="sap-icon://sort" press="handleSortButtonPressed"/>
				<Button tooltip="Filter" icon="sap-icon://filter" press="handleFilterButtonPressed"/>
				<Button tooltip="Group" icon="sap-icon://group-2" press="handleGroupButtonPressed"/>
			</OverflowToolbar>
		</headerToolbar>
		<infoToolbar>
			<OverflowToolbar id="vsdFilterBar" visible="false">
				<Text id="vsdFilterLabel" />
			</OverflowToolbar>
		</infoToolbar>

		<columns>
			<Column>
			</Column>
			<Column>
				<Text text="{i18n>id}" />
			</Column>
			<Column >
				<Text text="{i18n>name}" />
			</Column>
			<Column>
				<Text text="{i18n>designation}" />
			</Column>
			<Column >
				<Text text="{i18n>number}" />
			</Column>
			<!-- <Column width="13rem">
				<Text text="{i18n>email}" />
			</Column> -->
			<Column >
				<Text text="{i18n>salary}" />
			</Column>
			<Column >
				<Text text="{i18n>gender}" />
			</Column>
			<Column >
				<Text text="{i18n>joiningDate}" />
			</Column>
			<Column >
				<Text text="{i18n>address}" />
			</Column>
			<Column hAlign="Center"/>
		</columns>
		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
					<VBox class="customHighlighter" visible="{visible}"><Text text=""/></VBox>
					<Text text="{id}"/>
					<Text text="{name}" />
					<Text text="{designation}" />
					<Text text="{phone}" />
					<!-- <Text text="{email}" /> -->
					<Text text="{salary}" />
					<Text text="{gender}" />
					<Text text="{joiningDate}" />
					<Text text="{address}" />
					<Button icon="sap-icon://edit" press='onEditPress' />
				</cells>

			</ColumnListItem>
		</items>
	</Table>
</mvc:View>

